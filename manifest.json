// FILE: manifest.json
// This file is the heart of the Chrome extension. It defines the extension's
// properties, permissions, and the files it uses.

{
  "manifest_version": 3,
  "name": "Gemini PDF Assistant",
  "version": "0.2.0",
  "description": "Highlight text in PDFs to ask questions and get answers from Gemini.",
  "permissions": ["storage", "contextMenus", "declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Gemini PDF Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["viewer.html", "viewer.css", "viewer.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'"
  }
}
